<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergiocuadrado.mrfox.MyLogin"
    style="@style/MrFoxTheme"
    android:background="@color/moradoclaro">

    <ImageView
        android:id="@+id/foximage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/fox" />

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp"
        android:text="@string/mrfoxtxt"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />
</android.widget.FrameLayout>
